<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="client.controllers.ContrPM"
          prefHeight="50.0" prefWidth="350.0">
    <TextField fx:id="msField" onAction="#sendPM" promptText="Enter your message" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Check" fx:id="btnSendMsg" onAction="#sendPM" GridPane.rowIndex="1"  GridPane.columnIndex="1"/>
    <columnConstraints>
<!--        <ColumnConstraints halignment="LEFT" percentWidth="10"> </ColumnConstraints>-->
        <ColumnConstraints halignment="LEFT" percentWidth="80"> </ColumnConstraints>
        <ColumnConstraints halignment="LEFT" percentWidth="20"> </ColumnConstraints>
    </columnConstraints>
    <padding>
        <Insets bottom="0.0" left="10.0" right="10.0" top="0.0" />
    </padding>
    <rowConstraints>
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="80"/>
        <RowConstraints percentHeight="10"/>
    </rowConstraints>
</GridPane>
